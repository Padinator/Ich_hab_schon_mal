<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/playerName"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="@drawable/textview_story_border"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Spielername">
    </TextView>

    <TextView
        android:id="@+id/totalPoints"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/playerName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/textview_story_border"
        android:gravity="center"
        android:text="Gesamtpunktzahl"></TextView>

    <TextView
        android:id="@+id/beersDrunk"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/playerName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/textview_story_border"
        android:gravity="center"
        android:text="Anzahl Bier getrunken">
    </TextView>


</RelativeLayout>